<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ececea" >
    
    <TextView 
        android:id="@+id/tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:paddingLeft="5sp"
        android:paddingBottom="3sp"
        android:textSize="15sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/custom"
        />
     
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:weightSum="2"
     >

        <Button
            style="@android:style/Widget.Holo.Button.Borderless"
            android:id="@+id/importo"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_weight="1"
            android:background="@drawable/custom"
            android:text="@string/nuova_spesa"
            android:textColor="#ff000000" />
        
        <Button
            style="@android:style/Widget.Holo.Button.Borderless"
            android:id="@+id/sottrai_spesa"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:background="@drawable/custom"
            android:text="@string/sottrai_spesa"
            android:textColor="#ff000000" />

    
    
    </LinearLayout>
    
   <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10sp"
    android:baselineAligned="false"
    android:weightSum="2"
     >

        <Button
        style="@android:style/Widget.Holo.Button.Borderless"
        android:id="@+id/nuovo_bilancio"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_weight="1"
        android:background="@drawable/custom"
        android:text="@string/nuovo_bilancio"
        android:textColor="#ff000000" />

    <Button
        style="@android:style/Widget.Holo.Button.Borderless"
        android:id="@+id/incrementa_bilancio"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15sp"
        android:layout_weight="1"
        android:background="@drawable/custom"
        android:text="@string/agg_soldi_bilancio"
        android:textColor="#ff000000" />
    
    </LinearLayout>
    <Button
        android:layout_marginTop="10sp"
        android:id="@+id/sottrai_bilancio"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom"
        android:text="@string/sottrai_bilancio"
        android:textColor="#ff000000" />
    </LinearLayout>
